		features = ['c', 'cxx', 'cxxshlib'],
		includes = ['../..', '../../gst-libs', '.', 'Game_Music_Emu-git'],
		uselib = 'GME GSTREAMER GSTREAMER_BASE GSTREAMER_AUDIO',
		use = 'gstnonstreamaudio gme',
		target = 'gstgme',
		source = 'gstgmedec.c',
		install_path = bld.env['PLUGIN_INSTALL_PATH']
	)

