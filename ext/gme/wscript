		"Ym2413_Emu.cpp", \
		"Ym2203_Emu.cpp", \
		"ym2151.c", \
		"Ym2151_Emu.cpp", \
		"Vgm_Emu.cpp", \
		"Vgm_Core.cpp", \
		"Upsampler.cpp", \
		"Track_Filter.cpp", \
		"Spc_Filter.cpp", \
		"Spc_Emu.cpp", \
